<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jscheduler.controller.CourseController"
      spacing="15"
      prefWidth="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Course Details" styleClass="dialog-header"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Course Code:*" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="codeField" promptText="e.g., CS101" prefWidth="250"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Course Name:*" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField" promptText="e.g., Introduction to Programming" prefWidth="250"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Professor:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="professorField" promptText="e.g., Dr. Smith" prefWidth="250"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Semester:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <ComboBox fx:id="seasonComboBox" prefWidth="100"/>
            <ComboBox fx:id="yearComboBox" prefWidth="100"/>
        </HBox>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               GridPane.valignment="TOP"/>
        <TextArea fx:id="descriptionArea" promptText="Optional course description..."
                  prefRowCount="3" prefWidth="250"
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <Label text="* Required fields" styleClass="hint-text"/>
</VBox>
